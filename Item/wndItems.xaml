<Window x:Class="GroupProject.Item.wndItems"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject.Item"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="5*"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <DataGrid x:Name="dgItems" Grid.Row="0" Margin="10"/>
    <StackPanel Orientation="Horizontal" Grid.Row="1">
      <Label x:Name="lblDesc" Content="Description:" Width="110" Margin="10"
             VerticalContentAlignment="Center" FontSize="18"/>
      <TextBox x:Name="txtDesc" Text="Semi Precious Stone Ring" Width="240" Margin="10"
             VerticalContentAlignment="Center" FontSize="18"/>
      <Label x:Name="lblCost" Content="Cost: $" Width="70"
             VerticalContentAlignment="Center" FontSize="18"/>
      <TextBox x:Name="txtCost" Width="120" Margin="10"
             VerticalContentAlignment="Center" FontSize="18"/>
      <Label x:Name="lblCode" Content="Code:" Width="60"
             VerticalContentAlignment="Center" FontSize="18"/>
      <TextBox x:Name="Code"  Width="95" Margin="10"
             VerticalContentAlignment="Center" FontSize="18"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
      <Button x:Name="btnUpdate" Content="Update" Click="btnUpdate_Click" Width="120" FontSize="15" HorizontalAlignment="Left" Margin="10"/>
      <Button x:Name="btnDelete" Content="Delete" Click="btnDelete_Click" Width="120" FontSize="15" HorizontalAlignment="Center" Margin="10"/>
      <Button x:Name="btnNew" Content="New" Click="btnNew_Click" Width="120" FontSize="15" HorizontalAlignment="Right" Margin="10"/>
    </StackPanel>
  </Grid>
</Window>
